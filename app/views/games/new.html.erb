

<form class="form-style-5" action="/score" method="post">
  <h1>New game</h1>
  <ul>
    <% @letters.each do |letter|  %>
      <li><input type="button" value=<%= letter %>></li>
    <% end %>
  </ul>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type the longest word">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="Play">
</form>